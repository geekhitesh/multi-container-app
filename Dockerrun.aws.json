{
    "AWSEBDockerrunversion": 2,
    "containerDefinitions": [
        {
            "name" : "client",
            "image" : "geekhitesh/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name" : "server",
            "image" : "geekhitesh/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name" : "worker",
            "image" : "geekhitesh/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name" : "nginx",
            "image" : "geekhitesh/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort":80
                }
            ],
            "links": ["client","server"]
        }
    ]
}